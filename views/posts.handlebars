<section class="h-100">
     <div class="row">
          {{#each postRecords as | post |}}
          <div class="col-sm-10 text-black mb-3">
               <div class="h-custom-2 px-5 ms-xl-4 pt-xl-0 mt-xl-n5">
                    <div class="card-block">
                         <div class="card-body">
                              <div class="card-title card-post-background">
                                   <div style="display: flex;justify-content: space-between;">
                                        <div>{{post.title}}</div>
                                        <div>Gustavo Miller</div>
                                        <a id="post1" href="/reply" class="btn btn-success"
                                             style="margin-right:15px;">Post a reply!</a>
                                   </div>
                              </div>
                              <p class="pl-2">Category: Sports</p>
                              <p class="pl-2 card-text">{{post.description}}</p>
                         </div>
                    </div>
               </div>
          </div>
          {{/each}}
     </div>
</section>

<script src="/public/js/posts.js"></script>