<section class="h-75">
     <div class="container-fluid">
          <div class="row">
               <div class="col-12 text-black">

                    <div class="d-flex h-custom-2">

                         <form id="review-post" class="review-post">
                              <input type="hidden" id="user_id" value="{{dsData.user_id}}">
                              <input type="hidden" id="post_id" value="{{dsData.id}}">

                              <h3 class="fw-normal mb-3 pb-3" style="letter-    spacing: 1px;">Post a Comment</h3>
                              <p>Please enter your reviews or comments to the Article published. Be aware that comments
                                   are monitored and we do not tolerate the use curse words and foul language against
                                   the authors. Account would be close in those circumstances.</p>

                              <div class="form-outline mb-4">
                                   <label class="form-label" for="email-login">Article written by user
                                        <strong>{{dsData.user.name}}</strong> </label>
                                        <p class="tuck-parragraph">"{{dsData.description}}"</p>                                   
                              </div>

                              <p class="pl-2">Category: <span class="category-color">{{dsData.category.name}}</span>
                              </p>

                              <div class="form-outline mb-4">
                                   <textarea class="form-control" id="replycomment" rows="8"></textarea>
                              </div>

                              <div class="pt-1 mb-2">
                                   <button class="btn btn-info wide-button" type="submit">
                                        <i class="bi bi-send" style="color: rgb(52, 52, 238);"></i>
                                        Submit Article
                                   </button>
                                   <a class="btn btn-dark wide-button" href="/articles">
                                        <i class="bi bi-x-square-fill" style="color: rgb(102, 61, 61);"></i>
                                        Cancel</a>
                              </div>

                         </form>

                    </div>

               </div>
          </div>
     </div>
</section>

<script src="/js/reply.js"></script>