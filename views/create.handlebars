<section class="h-75">

     <!-- Modal Confirmation -->
     <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
          aria-labelledby="staticBackdropLabel" aria-hidden="false">
          <div class="modal-dialog">
               <div class="modal-content">
                    <div class="modal-header">
                         <h5 class="modal-title" id="staticBackdropLabel">Creating a New Article</h5>
                         <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div id="errormessage" class="modal-body text-danger"></div>
                    <div class="modal-footer">
                         <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ok</button>
                    </div>
               </div>
          </div>
     </div>

     <div class="container-fluid">
          <div class="row">
               <div class="col-12 text-black">

                    <div class="d-flex h-custom-2">

                         <form id="create-post" class="create-post">
                              <input type="hidden" id="user_id" value="{{userid}}">

                              <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Create new Post</h3>
                              <p>Please enter a new post. You can use HTML tags if you know how to use them.</p>

                              <div class="form-outline mb-4">
                                   <label class="form-label" for="email-login" data-bs-toggle="tooltip"
                                        data-bs-placement="top" title="Give your article a descriptive name!">Post Title</label>
                                   <input type="text" id="title" name="title" class="form-control form-control-lg" />
                              </div>
                              <div class="form-outline mb-4">
                                   <select id="category_id" name="category_id" class="form-select form-control-lg"
                                        aria-label="Select post Category">
                                        {{#each categories as | cat |}}
                                        <option value="{{cat.id}}">{{cat.name}}</option>
                                        {{/each}}
                                   </select>
                              </div>

                              <div class="form-outline mb-4">
                                   <textarea class="form-control" id="description" name="description" rows="12"></textarea>
                              </div>

                              <div class="pt-1 mb-2">
                                   <button id="submitarticle" class="btn btn-info wide-button" type="submit" disabled>
                                        <i class="bi bi-send" style="color: rgb(52, 52, 238);"></i> Submit Article
                                   </button>
                                   <button id="triggersave" class="btn" data-bs-toggle="modal"
                                        data-bs-target="#staticBackdrop" hidden>Modal</button>
                                   <a class="btn btn-dark wide-button" href="/articles">
                                        <i class="bi bi-x-square-fill" style="color: rgb(102, 61, 61);"></i> Cancel</a>
                              </div>

                         </form>

                    </div>

               </div>
          </div>
     </div>
</section>

<script src="/js/create.js"></script>